<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/confirm_your_booking"
            android:orientation="vertical"
            tools:ignore="UnknownId">


            <LinearLayout
                android:id="@+id/toplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_yacht_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/servicpay"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView21"
                    tools:ignore="RtlCompat" />



                <android.support.v7.widget.CardView xmlns:card_view="com.goigi.android.kidschecker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="SERVICE:"
                                android:textColor="#000000" />

                            <Spinner
                                android:id="@+id/spinner_Service"
                                android:layout_width="0dp"
                                android:layout_weight="0.30"
                                android:layout_height="wrap_content"
                                android:prompt="@string/spinner_title" />



                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="AMOUNT:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Amount"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"

                                android:singleLine="true"
                                android:text=""
                                android:inputType="number"
                                android:textColor="#000000"
                                android:textSize="14sp" />



                        </LinearLayout>





                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:card_view="com.goigi.android.kidschecker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="SERVICE 1:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Ser_First"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:background="@null"
                                android:singleLine="true"
                                android:hint="Service type 2"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="AMOUNT 1:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Amo_First"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"

                                android:singleLine="true"
                                android:text=""
                                android:inputType="number"
                                android:textSize="14sp" />


                        </LinearLayout>




                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView xmlns:card_view="com.goigi.android.kidschecker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="SERVICE 2:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Ser_Second"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:singleLine="true"

                                android:hint="ServiceType2"
                                android:background="@null"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="AMOUNT2:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Amu_Second"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:singleLine="true"
                                android:text=""
                                android:inputType="number"
                                android:textSize="14sp" />


                        </LinearLayout>




                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="com.goigi.android.kidschecker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="SERVICE 3:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Ser_Third"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:background="@null"
                                android:singleLine="true"
                                android:hint="ServiceType 3"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="AMOUNT 3:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Amu_Third"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"

                                android:singleLine="true"
                                android:text=""
                                android:inputType="number"
                                android:textSize="14sp" />


                        </LinearLayout>




                    </LinearLayout>


                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView xmlns:card_view="com.goigi.android.kidschecker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="SERVICE 4:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Ser_Fourth"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:background="@null"
                                android:singleLine="true"
                                android:hint="ServiceType4"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">


                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="0.40"
                                android:text="AMOUNT  4:"
                                android:textColor="#000000" />

                            <EditText
                                android:id="@+id/edit_Amu_Fourth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:singleLine="true"
                                android:text=""
                                android:inputType="number"
                                android:textSize="14sp" />


                        </LinearLayout>





                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>

        </LinearLayout>


    </ScrollView>

     <RelativeLayout
         android:id="@+id/save_Buttom"
         android:layout_width="match_parent"
         android:layout_height="35dp"
         android:layout_alignParentBottom="true"
         android:background="@color/colorPrimaryDark">

         <TextView
             android:id="@+id/dddd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:text="SAVE"
             android:textColor="#ffffff"
             android:textSize="17sp" />
     </RelativeLayout>

</RelativeLayout>